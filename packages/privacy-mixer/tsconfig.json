{
  "compilerOptions": {
    /* --- Cấu hình Cơ bản --- */
    "target": "ES2020",            
    "module": "NodeNext",          
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],             

    /* --- Đường dẫn Input/Output --- */
    "rootDir": "./src",            
    "outDir": "./dist",            

    /* --- Tương thích JS --- */
    "allowJs": true,               
    "checkJs": false,              
    
    /* --- Tính Nghiêm ngặt (Strictness) --- */
    "strict": true,                
    "noImplicitAny": false,        
    "strictNullChecks": true,      

    /* --- Interop (Tương thích thư viện) --- */
    "esModuleInterop": true,       
    "skipLibCheck": true,          
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true      
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}